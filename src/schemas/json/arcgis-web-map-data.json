{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ArcGIS web map JSON format",
  "definitions": {
    "versionNumber": {
      "type": "string",
      "pattern": "^\\d+(?:\\.\\d+)*$"
    },
    "layerType": {
      "type": "string",
      "enum": [
        "ArcGISMapServiceLayer",
        "ArcGISTiledMapServiceLayer"
      ]
    },
    "baseMapLayer": {
      "properties": {
        "id": {
          "type": "string"
        },
        "layerType": {
          "type": "string"
        },
        "opacity": {

          "type": "integer"
        },
        "visibility": {

          "type": "boolean"
        },
        "url": {

          "type": "string"
        }
      }
    },
    "baseMap": {
      "properties": {
        "baseMapLayers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/baseMapLayer"
          },
          "additionalItems": false
        },
        "title": {

          "type": "string"
        }
      }
    },
    "operationalLayer": {
      "type": "object",
      "properties": {
        "id": {

          "type": "string"
        },
        "layerType": {
          "$ref": "#/definitions/layerType"
        },
        "url": {

          "type": "string"
        },
        "visibility": {

          "type": "boolean"
        },
        "opacity": {

          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "title": {

          "type": "string"
        },
        "itemId": {

          "type": "string",
          "pattern": "^[0-9a-fA-F]+$"
        }
      }
    }
  },

  "type": "object",
  "properties": {
    "operationalLayers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/operationalLayer"
      }
    },
    "baseMap": {
      "$ref": "#/definitions/baseMap"
    },
    "spatialReference": {
      "$ref": "arcgis-geometry.json#/definitions/spatialReference"
    },
    "authoringApp": {
      "type": "string"
    },
    "authoringAppVersion": {
      "$ref": "#/definitions/versionNumber"
    },
    "version": {
      "$ref": "#/definitions/versionNumber"
    }
  }
}